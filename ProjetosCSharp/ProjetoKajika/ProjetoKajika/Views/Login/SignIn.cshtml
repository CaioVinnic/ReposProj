@model ProjetoKajika.Models.UsuarioModel
@{ 
    Layout = null;
}
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<!DOCTYPE html>
<html>
<head>
    <title>Login Page</title>
    <!--Made with love by Mutiullah Samim -->
    <!--Bootsrap 4 CDN-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <!--Fontawesome CDN-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    <!--Custom styles-->
    <link rel="stylesheet" type="text/css" href="~/Content/login.css" />
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Sign In</h3>
                    <div class="d-flex justify-content-end social_icon">
                        <span>                            
                            <a href="https://www.facebook.com"><i class="fab fa-facebook-square" title="Facebook"></i></a>
                        </span>
                        <span>
                            <a href="https://www.linkedin.com"><i class="fab fa-linkedin" title="Linkedin"></i></a>
                        </span>
                        <span>
                            <a href="https://www.twitter.com"><i class="fab fa-twitter-square" title="Twitter"></i></a>
                        </span>
                    </div>
                </div>
                <div class="card-body" style="padding-top: 0px">
                    @using (Html.BeginForm("Autentica", "Login", FormMethod.Post))
                    {
                        <span class="text-danger">@Html.ValidationMessage("login.Invalido")</span>

                        <span class="text-danger">@Html.ValidationMessageFor(u => u.Nome)</span>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            @Html.TextBoxFor(u => u.Nome, new { @class = "form-control", placeholder = "Username", autocomplete = "off" })
                        </div>

                        <span class="text-danger">@Html.ValidationMessageFor(u => u.Senha)</span>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            @Html.PasswordFor(u => u.Senha, new { @class = "form-control", placeholder = "Password" })
                        </div>

                        <div class="row align-items-center remember">
                            <input type="checkbox">Remember me
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Login" class="btn float-right login_btn">
                        </div>
                    }
                </div>
                <div class="card-footer links a">
                    <div class="justify-content-center d-flex">
                        @Html.ActionLink("Sign Up", "SignUp", "Usuario")
                    </div>
                    <div class="justify-content-center d-flex">
                        <a href="#">Forgot your password?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>